pipeline {
    agent {
        docker{
            image 'cypress/browsers'
        }
    }
    stages {
        stage('Install Dependencies') {
            steps {
                script {

                    sh 'npm ci'
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {

                    sh 'npx cypress run'
                }
            }
        }

        stage('Generate Report') {
            steps {
                script {
                    sh 'node cucumber-report-generator.js'

                }
            }
        }


    }

    post {
        always {
          script {
            echo 'Les artifacts'

            archiveArtifacts artifacts: '*/.reports', allowEmptyArchive: true

          }
        }
    }
}

